!!!
%html
  %head
    %title Movie splaT
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
    = stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Averia+Sans+Libre'
  %body
    .contain-to-grid
      %nav.top-bar
        %ul.title-area
          %li
            .name
              %h1#nav_title
                = link_to "Movie splaT", root_path
        %section.top-bar-section
          %ul.right
            - if current_user
              %li#username= current_user.username
              %li.divider
              %li= link_to "My movieS", movie_entries_path
              %li.divider
              %li= link_to "Sign Out", destroy_user_session_path, method: :delete
            - else
              %li= link_to "Sign Up", new_user_registration_path
              %li.divider
              %li= link_to "Sign In", new_user_session_path
  .row
    .small-6.columns
      -if flash.notice
        .alert-box.success.radius
          = flash.notice
      -if flash.alert
        .alert-box.warning.radius
          = flash.alert
  = yield
  =javascript_include_tag "application"
