.row
  .small-12.columns
    %table.splat
      %thead
        %tr
          %th Title
          %th My Rating
          %th Critic Rating
          %th Rating Difference
      %tbody
        - @movie_entries.each do |movie_entry|
          %tr
            %td= movie_entry.movie.title
            %td= movie_entry.user_rating
            %td= movie_entry.movie.tomato_meter
            %td= movie_entry['rating']
        %tr
          %td= 'Average Totals:'
          %td= @user_rating_avg
          %td= @critic_rating_avg
          %td= @rating_diff_avg
